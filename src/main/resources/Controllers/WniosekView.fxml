<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" padding="10" xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.WniosekController">
    <HBox spacing="5">
        <ComboBox fx:id="podatnikCombo" promptText="Podatnik"/>
        <TextField fx:id="trescField" promptText="Treść wniosku"/>
        <Button text="Złóż" onAction="#onZloz"/>
    </HBox>
    <TableView fx:id="table">
        <columns>
            <TableColumn text="ID" fx:id="idColumn"/>
            <TableColumn text="Podatnik ID" fx:id="podatnikIdColumn"/>
            <TableColumn text="Treść" fx:id="trescColumn"/>
            <TableColumn text="Status" fx:id="statusColumn"/>
            <TableColumn text="Data" fx:id="dataColumn"/>
            <TableColumn text="Zmiana" fx:id="actionColumn"/>
        </columns>
    </TableView>
</VBox>
