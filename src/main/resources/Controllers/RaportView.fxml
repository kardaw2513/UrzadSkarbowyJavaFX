<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.RaportController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Raport mandatów -->
    <HBox spacing="10">
        <Label text="Mandaty:"/>
        <CheckBox fx:id="onlyPaidCheck" text="Tylko opłacone" onAction="#onFilterMandaty"/>
    </HBox>
    <TableView fx:id="mandatTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="midColumn" text="ID" prefWidth="200"/>
            <TableColumn fx:id="mpodatnikIdColumn" text="Podatnik ID" prefWidth="150"/>
            <TableColumn fx:id="mkwotaColumn" text="Kwota" prefWidth="100"/>
            <TableColumn fx:id="moplaconyColumn" text="Opłacony" prefWidth="100"/>
            <TableColumn fx:id="mdataColumn" text="Data" prefWidth="120"/>
        </columns>
    </TableView>

    <Separator/>

    <!-- Raport wizyt -->
    <Label text="Wizyty:"/>
    <TableView fx:id="wizytaTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="widColumn" text="ID" prefWidth="200"/>
            <TableColumn fx:id="wpodatnikIdColumn" text="Podatnik ID" prefWidth="150"/>
            <TableColumn fx:id="wpracownikIdColumn" text="Pracownik ID" prefWidth="150"/>
            <TableColumn fx:id="wdataColumn" text="Data" prefWidth="120"/>
        </columns>
    </TableView>

    <Separator/>

    <!-- Raport wniosków -->
    <HBox spacing="10">
        <Label text="Wnioski, status:"/>
        <ChoiceBox fx:id="statusChoice" onAction="#onFilterWnioski"/>
    </HBox>
    <TableView fx:id="wniosekTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="zidColumn" text="ID" prefWidth="200"/>
            <TableColumn fx:id="zpodatnikIdColumn" text="Podatnik ID" prefWidth="150"/>
            <TableColumn fx:id="ztrescColumn" text="Treść" prefWidth="200"/>
            <TableColumn fx:id="zstatusColumn" text="Status" prefWidth="100"/>
            <TableColumn fx:id="zdataColumn" text="Data" prefWidth="120"/>
        </columns>
    </TableView>
</VBox>
