<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.MandatController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10">
        <Label text="Szukaj (imię/nazwisko):"/>
        <TextField fx:id="searchField" promptText="Wpisz imię lub nazwisko"/>
    </HBox>
    <HBox spacing="10">
        <Label text="Podatnik:"/>
        <ComboBox fx:id="podatnikCombo" prefWidth="200"/>
        <Label text="Kwota:"/>
        <TextField fx:id="kwotaField" promptText="Kwota"/>
        <Button text="Wystaw mandat" fx:id="btnWystaw" onAction="#onWystawMandat"/>
    </HBox>

    <TableView fx:id="table" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="200"/>
            <TableColumn fx:id="podatnikNameColumn" text="Podatnik" prefWidth="200"/>
            <TableColumn fx:id="kwotaColumn" text="Kwota" prefWidth="100"/>
            <TableColumn fx:id="oplaconyColumn" text="Opłacony" prefWidth="100"/>
            <TableColumn fx:id="dataColumn" text="Data" prefWidth="120"/>
            <TableColumn fx:id="actionColumn" text="Akcja" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>
